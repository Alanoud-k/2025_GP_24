{
  "services": {
    "backend": {
      "path": "server",
      "engine": "node"
    },
    "ml_service": {
      "path": "ml_service",
      "engine": "python",
      "build": {
        "commands": [
          "pip install -r requirements.txt"
        ]
      },
      "start": {
        "cmd": "uvicorn main:app --host 0.0.0.0 --port $PORT"
      }
    }
  }
}
